{
  "manifest_version": 3,
  "name": "Web Text Highlighter",
  "version": "1.0.0",
  "description": "Highlight and save text on web pages",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}